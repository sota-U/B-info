<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <script src="https://kit.fontawesome.com/26f6519548.js" crossorigin="anonymous"></script>

  <style>
  @import url('https://fonts.googleapis.com/css2?family=Teko:wght@500&display=swap');
  </style>

  <h1 class="app-title">
    <a href="/">B-info</a>
  </h1>
  <nav class="pc-nav">
   <ul class='lists-right'>
      <% if user_signed_in? %>
        <li><div class="show"><%= link_to "#{current_user.nickname}-USERINFO", user_path(current_user.id), class: "user-info-list"%></div></li>
        <li><div class="show"><%= link_to 'LOGOUT', destroy_user_session_path, method: :DELETE, class: "user-logout-list" %></div></li> 
        <li><div class="show"><%= link_to 'POST', new_tweet_path, class: 'user-post-list' %></div></li>
      <% else %>
        <li>
        <div class="show"><%= link_to 'LOGIN', new_user_session_path, class: "user-login-list" %></div>
        </li>
        <div class="show"><li><%= link_to 'SIGNUP', new_user_registration_path, class: "user-sign-up-list" %></li></div>
      <% end %>
    </ul>
  </nav>

</header>