<% if user_signed_in? %>
    <% if current_user.already_liked?(tweet) %>
        <%= link_to tweet_likes_path(tweet), method: :delete, remote: true do %>
            <i class="fa fa-heart" aria-hidden="true" style="color: red;">
                <%= tweet.likes.count %>
            </i>
        <% end %>
    <% else %>
        <%= link_to tweet_likes_path(tweet), method: :post, remote: true do %>
            <i class="fa fa-heart" aria-hidden="true" style="color: aqua;">
                <%= tweet.likes.count %>
            </i>
        <% end %>
    <% end %>
<% else %>
    <i class="fa fa-heart" aria-hidden="true">
            <%= tweet.likes.count %>
    </i>
<% end %>