<%= form_with model: @user, url: user_path(@user.id), class: 'registration-main', local: true do |f| %>

<style>
@import url('https://fonts.googleapis.com/css2?family=Teko:wght@500&display=swap');
</style>

<div class='editform-wrap'>
  <div class='editform-header'>
    <h1 class='editform-headertext'>
      [EDIT-PAGE]
      
    </h1>
  </div>

  <%= render 'shared/error_messages', model: f.object %>

  <div class="editform-group">
    <div class='editform-text-wrap'>
      <div>
        <label class="editform-text">NICKNAME</label>
      </div>
    </div>
    <%= f.text_area :nickname, class:"editinput-default", id:"edit-nickname", placeholder:"ä¾‹: CP3", maxlength:"40" %>
  </div>
  <div class="editform-group">
    <div class="editform-profile">
      <div>
        <label class="editform-text">SELF-INTRODUCTION</label>
      </div>
    </div>
    <%= f.text_area :profile, class:"editinput-default"%>
  </div>
  
  <div class='editregister-btn'>
    <%= f.submit "ENTRY" ,class:"editregister-red-btn" %>
  </div>
  
</div>

<% end %>

