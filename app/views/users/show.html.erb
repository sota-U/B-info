<style>
@import url('https://fonts.googleapis.com/css2?family=Teko:wght@500&display=swap');
</style>

<div class="show-main">
  <div class="user-maininfo">
    <div class="info-title">
      :USERINFO:
    </div>
    <% if @user == current_user%>
      <div class="user-edit">
        <%= link_to '<<EDIT>>', edit_user_path(@user.id), class: 'edit' %>
      </div>
    <% end %>
    <div class=user-info-all>
      <div class="user-info">
      <%="NICKNAME >> $#{@user.nickname}$"%>
      </div>
      <div class="user-info">
      <%= "BIRTHDAY >> $#{@user.birthday}$"%>
      </div>
      <div class="userprofile-info">
      <%=@user.profile%>
      </div>
    </div>
  </div>
  <div class="user-maininfo-damy">
   <div>
   </div>
  </div>
  <div class="user-tweets">
    <div class="user-contents-title">
      -contents-
    </div>
    <ul class="user-tweet-list">
      <% @tweets.each do |tweet|%>
        <li class="list">
          <div class="showtweet-info">
            <div class="showtweet-title">
              <%= ":#{tweet.title}:" %>
            </div>
          </div>
          <div class="showtweet-image-content">
            <div class="showtweet-images">
              <% tweet.images.each do |image| %>
                <%= image_tag image, :size => '800x800' ,class:'showimages' %>
              <% end %>
            </div>
          </div>
          <div class="showtweet-user-name">
            <div class="showuser-name">
            <%= "from :#{tweet.user.nickname}:" %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  <div>


</div>