

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>

<style>
@import url('https://fonts.googleapis.com/css2?family=Teko:wght@500&display=swap');
</style>

<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      [Please enter your membership information]
    </h1>
  </div>
  <div class='header-caution'>
  <h4 class='form-header-caution'>
      ※Please fill in all the information
    </h4>
  </div>

  <%= render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <div>
        <label class="form-text">NICKNAME</label>
      </div>
    </div>
    <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例: YaMa", maxlength:"40" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <div>
        <label class="form-text">EMAIL</label>
      </div>
    </div>
    <div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PCもしくは携帯", autofocus: true %>
    </div>
  </div>
  <%#p class='info-text'>※英字と数字の両方を含めて設定してください</p%>
  <div class="form-group">
    <div class='form-text-wrap'>
      <div>
        <label class="form-text">PASSWORD</label>
      </div>
    </div>
    <div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    </div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <div>
        <label class="form-text">PASS[confirmation]</label>
      </div>
    </div>
    <div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    </div>
  </div>
  <div class="form-group">
    <div class="form-info-div">
      <div>
        <p class='form-info-header'>
          Check user information
        </p>
      </div>
      <div>
        <p class='form-info-text'>
          :ご利用者様の本人情報の登録にご協力ください
        </p>
      </div>
      <div>
        <p class='form-info-text'>
          :他のご利用者様に公開されることはありません
        </p>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <div>
        <label class="form-text">NAME[FullWidth]</label>
      </div>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :last_name, class:"input-name", id:"last-name", placeholder:"例> 山田" %>
      <%= f.text_area :first_name, class:"input-name", id:"first-name", placeholder:"例> 太郎" %>
    </div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">NAME:READING[FullWidth]</label>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :last_name_reading, class:"input-name", id:"last-name-kana", placeholder:"例> ヤマダ" %>
      <%= f.text_area :first_name_reading, class:"input-name", id:"first-name-kana", placeholder:"例> タロウ" %>
    </div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">YourDateOfBirth</label>
    </div>
    <div class='input-birth-wrap'>
      <%= f.text_area :birthday, class:"input-birth", id:"birth-day", placeholder:"例: 2000-01-01"%>
    </div>
    <p class='info-text'>※ 本人情報は正しく入力してください</p>
  </div>
  <div class='register-btn'>
    <%= f.submit "ENTRY" ,class:"register-red-btn" %>
  </div>
  
</div>

<% end %>
